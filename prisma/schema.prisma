generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Board {
  id         Int       @id(map: "board_posts_pkey") @default(autoincrement())
  title      String    @db.VarChar(255)
  content    String
  author_id  Int
  author     User @relation(name: "UserBoards", fields: [author_id], references: [id])
  password_hash String?  @db.VarChar(255) 
  is_secret  Boolean?  @default(false)
  is_deleted Boolean?  @default(false)
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)

  comments Comment[] @relation("BoardComments")

  @@map("board")
}

model Gallery  {
  id         Int      @id @default(autoincrement())
  title      String   @db.VarChar(255)
  content    String
  category   String?  @db.VarChar(100)
  images     Json
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @default(now()) @db.Timestamp(6)

  @@map("gallery")
}

model Account {
  id                 Int       @id @default(autoincrement())
  userId             Int
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  
  access_token       String?  
  expires_at         Int?     
  token_type         String?  
  scope              String?  
  id_token           String?  
  session_state      String?  

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
}

model User {
  id          Int       @id @default(autoincrement())
  email       String?   @unique
  name        String?
  nickname      String? @unique @db.VarChar(50)
  password_hash String?
  phone        String?   @db.VarChar(15)
  accounts    Account[]
  sessions    Session[]
  comments    Comment[] @relation("UserComments") 
  boards     Board[]   @relation("UserBoards")

  @@map("users")
}

model Comment {
  id         Int       @id @default(autoincrement())
  post_id     Int
  post       Board     @relation(fields: [post_id], references: [id], onDelete: Cascade, name: "BoardComments")
  author_id  Int
  author     User      @relation("UserComments", fields: [author_id], references: [id])
  content    String
  parent_id  Int?
  parent     Comment?  @relation("CommentReplies", fields: [parent_id], references: [id])
  replies    Comment[] @relation("CommentReplies")
  is_deleted  Boolean?  @default(false)
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  updated_at  DateTime  @default(now()) @db.Timestamptz(6)

  @@map("comment")
}